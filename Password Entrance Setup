#setting a password to enter a building
class PasswordGateway:

    def password(self):
        correct_pw = "1234*"
        print("Enter passcode to access.")
        enter_pw = input("> ")
        while enter_pw != correct_pw:
            print("Incorrect password.")
            enter_pw = input("> ")
        else:
            print("You are allowed to enter the building.")
